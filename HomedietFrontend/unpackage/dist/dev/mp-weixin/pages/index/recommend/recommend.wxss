/* 水平间距 */
.upper {
  width: 100%;
}
.upper .img {
  width: 100%;
  height: 230px;
}
.upper .img image {
  width: 100%;
  height: 100%;
}
.upper .recipe {
  width: 308px;
  background-color: #F7F7F7;
  border: 1px solid #bbbbbb;
  box-shadow: #40a9ff 0rpx 4rpx 12rpx 0rpx;
  border-radius: 15px;
  position: absolute;
  padding-bottom: 20px;
  top: 80px;
  left: 40px;
}
.upper .recipe .favBtn {
  position: absolute;
  left: 90px;
  top: 15px;
}
.upper .recipe .select-bar {
  position: absolute;
  width: 120px;
  left: 174px;
  top: 10px;
}
.upper .recipe .title {
  padding-left: 10px;
  padding-top: 10px;
  color: #101010;
  font-size: 18px;
  font-family: PingFangSC-regular;
}
.upper .recipe .subtitle {
  padding-left: 15px;
  padding-top: 5px;
  color: #101010;
  font-size: 14px;
  font-family: PingFangSC-regular;
}
.upper .recipe .breakfast {
  display: flex;
  width: 274px;
  height: 61px;
  border: 1px solid #bbbbbb;
  margin-left: 15px;
  margin-top: 15px;
  padding-left: 5px;
  align-items: center;
  position: relative;
}
.upper .recipe .breakfast .pic {
  width: 50px;
  height: 35px;
  margin-right: 10px;
}
.upper .recipe .breakfast .pic image {
  width: 100%;
  height: 100%;
}
.upper .recipe .breakfast .detail {
  font-size: 14px;
}
.upper .recipe .breakfast .detail text {
  font-size: 12px;
}
.upper .recipe .breakfast button {
  width: 170rpx;
  height: 44rpx;
  font-size: 11px;
  border-radius: 20px;
  line-height: 44rpx;
  color: #FFFFFF;
  background-color: #0050b3;
  position: absolute;
  top: 8px;
  right: 10px;
}
.lower {
  left: 41px;
  top: 1180px;
  width: 308px;
  height: 180px;
  border-radius: 20px 20px 20px 20px;
  color: #101010;
  font-size: 14px;
  font-family: Arial;
  border: 1px solid #bbbbbb;
  box-shadow: #40a9ff 0rpx 4rpx 12rpx 0rpx;
  position: absolute;
  margin-bottom: 1px;
}
.lower .title {
  padding-left: 10px;
  padding-top: 10px;
  color: #101010;
  font-size: 18px;
  margin-bottom: 10px;
  font-family: PingFangSC-regular;
  text-align: center;
}
.lower .info {
  margin-left: 90px;
  line-height: 30px;
  width: 200px;
}

